<!DOCTYPE HTML>
<html lang='ja'>
<head>
  <meta charset="utf-8">
  <meta content='text/html' http-equiv='content-type'>
  <title>Proconist.net Console</title>
  <meta content='width=device-width, initial-scale=1, maximum-scale=1' name='viewport'>
  <link rel="stylesheet" href='/css/bootstrap.min.css'>
  <link rel="stylesheet" href='/css/console.css'>
</head>

<body>
  <div class='navbar navbar-inverse navbar-static-top' id='top-nav'>
    <div class='container'>
      <div class='navbar-header'>
        <button class='navbar-toggle' data-target='.navbar-collapse' data-toggle='collaps' type='button'>
          <span class='icon-toggle'></span>
        </button>
        <a class='navbar-brand'>Proconist.net Console</a>
      </div>
      <% if @op %>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#"><i class="glyphicon glyphicon-user"></i> <%= @op.name %></a>
            </li>
            <li>
              <a href="/sign_out"><i class="glyphicon glyphicon-lock"></i> Sign out</a>
            <li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <%= yield %>

  <script src='/jquery-2.1.1.min.js' type='text/javascript'></script>
  <script src='/js/bootstrap.min.js' type='text/javascript'></script>
</body>
</html>
