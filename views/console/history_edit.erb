<% if params[:status] == 'success' %>
  <div class="alert alert-success" role="alert">保存に成功しました</div>
<% end %>
<form class="form-horizontal" method="post" action="./<%= @history.id || 'new' %>">
  <% if @history.created_at.present? %>
    <div class="form-group">
      <label for="created_at" class="col-sm-2 control-label">日付</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="created_at" name="created_at" value="<%= @history.created_at %>">
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <label for="label" class="col-sm-2 control-label">ラベル</label>
    <div class="col-sm-10">
      <select class="form-control" id="label" name="label">
        <% History.labels.each do |s| %>
          <%= option_tag(s[0], s[0], s[0] == @history.label) %>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">タイトル</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" value="<%= @history.title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="href" class="col-sm-2 control-label">リンク</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="href" name="href" value="<%= @history.href %>">
    </div>
  </div>
  <div class="form-group">
    <label for="img" class="col-sm-2 control-label">画像</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="img" name="img" value="<%= @history.img %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">保存</button>
      <a href="/console/history" class="btn btn-success btn-md" role="button" style="margin-left:50px;">戻る</a>
      <% if @history.created_at.present? %>
        <a href="/console/history/<%= @history.id %>/delete" class="btn btn-danger btn-md" role="button" style="margin-left:50px;">削除</a>
      <% end %>
    </div>
  </div>
</form>
