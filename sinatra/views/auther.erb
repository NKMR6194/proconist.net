<div class="row content">
  <!-- .main: main column -->
  <div class="col-md-12 main">
    <div class="row member">
      <div class="col-md-3 member-image">
        <img src="<%= @auther.icon %>" class="img-circle img-responsive">
      </div>
      <div class="col-md-9">
        <h1 class="member-name"><%= @auther.name %></h1>
        <div class="member-introduction">
          <%= @auther.description %>
          <ul class="list-inline member-sns">
            <% @auther.sns.each do |item| %>
              <li><a href="<%= item[:href] %>" target="_blank"><i class="fa fa-lg fa-fw <%= item[:klass] %>"></i> <%= item[:name] %></a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-12 auther-entry">
      <h2>この人が書いた記事</h2>
      <ul>
        <% @auther.entry.each do |entry| %>
          <li>
            <h3><a href="<%= entry.href %>"><%= entry.title %></a></h3>
            <span><i class="fa fa-folder-open"></i> <%= entry.category_name %></span>
            <span><i class="fa fa-calendar"></i> <%= entry.date_hyphen %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
